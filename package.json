{
  "name": "qsat-lms-backend",
  "version": "1.0.0",
  "private": true,
  "type": "module",
  "engines": {
    "node": ">=18.18"
  },
  "scripts": {
    "build": "prisma generate && node backend/app.mjs",
    "dev": "cross-env NODE_ENV=development nodemon backend/app.mjs",
    "start": "node backend/app.mjs",
    "prisma:generate": "prisma generate --schema prisma/schema.prisma",
    "prisma:migrate": "prisma migrate dev --schema prisma/schema.prisma",
    "prisma:studio": "prisma studio --schema prisma/schema.prisma",
    "seed": "node backend/scripts/seed.mjs || true"
  },
  "dependencies": {
    "@prisma/client": "^5.22.0",
    "bcrypt": "^5.1.1",
    "bcryptjs": "^2.4.3",
    "compression": "^1.7.4",
    "cors": "^2.8.5",
    "date-fns": "^4.1.0",
    "dotenv": "^16.6.1",
    "express": "^4.21.2",
    "express-rate-limit": "^7.4.0",
    "helmet": "^7.2.0",
    "joi": "^17.12.3",
    "jose": "^5.10.0",
    "morgan": "^1.10.1",
    "slugify": "^1.6.6",
    "zod": "^3.25.76"
  },
  "devDependencies": {
    "cross-env": "^7.0.3",
    "nodemon": "^3.1.10",
    "prisma": "^5.22.0"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "description": "Standalone backend (Node.js + Express + Prisma + PostgreSQL)"
}
